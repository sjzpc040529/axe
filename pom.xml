<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.lzh.framework</groupId>
    <artifactId>axe</artifactId>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>axe-study</module>
        <module>axe-common</module>
        <module>axe-web</module>
        <module>axe-service</module>
        <module>axe-manager</module>
        <module>axe-domain</module>
        <module>axe-dao</module>
        <module>axe-rpc</module>
    </modules>
    <packaging>pom</packaging>
    <properties>
        <spring.security.version>3.1.4.RELEASE</spring.security.version>
        <mitreid-version>1.1.8-crack-SNAPSHOT</mitreid-version>
        <java.version>1.7</java.version>
        <java.encoding>UTF-8</java.encoding>
        <jetty-version>6.1.22</jetty-version>
        <autoconfig-plugin-version>1.2</autoconfig-plugin-version>
        <org.springframework.version>4.1.1.RELEASE</org.springframework.version>
        <axe-version>1.0-SNAPSHOT</axe-version>
        <springframework-version>4.1.1.RELEASE</springframework-version>
        <slf4j-version>1.7.6</slf4j-version>
        <log4j-version>1.2.17</log4j-version>
        <mysql-connector-version>5.1.29</mysql-connector-version>
        <mybatis-version>3.2.5</mybatis-version>
        <mybatis-spring-version>1.2.2</mybatis-spring-version>
        <mybatis-ehcache-version>1.0.0</mybatis-ehcache-version>
        <ehcache-version>2.6.8</ehcache-version>
        <freemarker-version>2.3.20</freemarker-version>
        <json-version>2.3.2</json-version>
        <aspectj-version>1.7.4</aspectj-version>
    </properties>

    <dependencyManagement>
    <dependencies>

        <!--子模块-->
        <dependency>
            <groupId>org.lzh.framework</groupId>
            <artifactId>axe-common</artifactId>
